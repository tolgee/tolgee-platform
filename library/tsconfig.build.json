// On build, only *.d.ts declarations and *.d.ts.map maps are emitted
// *.js files are generated by Vite

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["**/stories.*", "**/*.mdx"]
}
