{
  "name": "@tolgee/storybook-addon",
  "version": "1.0.0",
  "description": "Storybook addon for Tolgee localization tool",
  "author": "Jan Moln√°r <honza@tolgee.io>",
  "keywords": [
    "storybook-addon",
    "i18n",
    "tolgee",
    "internationalization",
    "localization",
    "locale",
    "translation",
    "language",
    "react",
    "storybook"
  ],
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/tolgee/storybook-addon#readme",
  "bugs": {
    "url": "https://github.com/tolgee/storybook-addon/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tolgee/storybook-addon"
  },
  "scripts": {
    "build": "npm run clean && tsc --project .",
    "clean": "rm -rf ./dist/",
    "format": "prettier --write .",
    "lint": "npm run lint:code && npm run lint:types && npm run lint:spelling && npm run lint:format",
    "lint:code": "eslint '**/*'",
    "lint:types": "tsc --noEmit",
    "lint:spelling": "cspell --no-progress --dot .",
    "lint:format": "prettier --check ."
  },
  "dependencies": {
    "@tolgee/format-icu": "^6.2.7",
    "@tolgee/react": "^6.2.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@storybook/icons": "^2.0.1",
    "@tolgee/core": "^6.2.7",
    "@types/node": "^22.19.1",
    "@types/react": "^17.0.2",
    "cspell": "^9.4.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "react": "^17.0.2",
    "storybook": "^10.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "peerDependencies": {
    "storybook": "^10.0.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./manager": "./dist/manager.js",
    "./preview": {
      "types": "./dist/preview.d.ts",
      "import": "./dist/preview.js"
    }
  },
  "browserslist": [
    "defaults",
    "not op_mini all"
  ],
  "publishConfig": {
    "access": "public"
  },
  "storybook": {
    "displayName": "Tolgee",
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://user-images.githubusercontent.com/18496315/188628892-33fcc282-26f1-4035-8105-95952bd93de9.svg"
  }
}
